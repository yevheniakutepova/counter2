<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter.MainPage"
             Title="Counter App">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#FFFFFF">

            <Label Text="Counter App"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <Frame BackgroundColor="#EFEFEF" Padding="10" CornerRadius="10">
                <HorizontalStackLayout Spacing="10">
                    <Entry x:Name="CounterNameEntry"
                           Placeholder="Enter counter name"
                           HorizontalOptions="FillAndExpand"
                           FontSize="16"
                           TextColor="Black" />
                    <Button Text="Add"
                            Clicked="OnAddCounterClicked"
                            BackgroundColor="#0078D7"
                            TextColor="White"
                            CornerRadius="10" />
                </HorizontalStackLayout>
            </Frame>

            <VerticalStackLayout x:Name="CountersStack" Spacing="10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
